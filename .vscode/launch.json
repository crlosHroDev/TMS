    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd":"${workspaceRoot}",
            "sourceMaps": true,
            "preLaunchTask": "npm: build:server",
            "program": "${workspaceRoot}/dist/ssr/app",
            "args":[
                "increment",
                "3"
            ],
            "stopOnEntry": false,
            "localRoot": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/dist/ssr/**"
            ]
        }
    ]
}